#!/usr/bin/env bash

cd public
mkdir -p "js/@codemirror"
mkdir -p "js/@lezer"

curl "https://unpkg.com/@codemirror/view@6.4.0/dist/index.js" > "js/@codemirror/view.js"
curl "https://unpkg.com/@codemirror/state@6.1.2/dist/index.js" > "js/@codemirror/state.js"
curl "https://unpkg.com/@codemirror/language@6.3.0/dist/index.js" > "js/@codemirror/language.js"
curl "https://unpkg.com/@codemirror/lang-html@6.1.3/dist/index.js" > "js/@codemirror/lang-html.js"
curl "https://unpkg.com/@codemirror/lang-css@6.0.1/dist/index.js" > "js/@codemirror/lang-css.js"
curl "https://unpkg.com/@codemirror/lang-javascript@6.1.1/dist/index.js" > "js/@codemirror/lang-javascript.js"
curl "https://unpkg.com/@codemirror/autocomplete@6.3.0/dist/index.js" > "js/@codemirror/autocomplete.js"
curl "https://unpkg.com/@codemirror/lang-markdown@6.0.4/dist/index.js" > "js/@codemirror/lang-markdown.js"
curl "https://unpkg.com/@codemirror/commands@6.1.2/dist/index.js" > "js/@codemirror/commands.js"
curl "https://unpkg.com/@codemirror/autocomplete@6.3.0/dist/index.js" > "js/@codemirror/autocomplete.js"
curl "https://unpkg.com/@codemirror/search@6.2.2/dist/index.js" > "js/@codemirror/search.js"
curl "https://unpkg.com/@codemirror/language-data@6.1.0/dist/index.js" > "js/@codemirror/language-data.js"
curl "https://unpkg.com/@lezer/markdown@1.0.2/dist/index.js" > "js/@lezer/markdown.js"
curl "https://unpkg.com/@lezer/common@1.0.1/dist/index.js" > "js/@lezer/common.js"
curl "https://unpkg.com/@lezer/highlight@1.1.2/dist/index.js" > "js/@lezer/highlight.js"
curl "https://unpkg.com/@lezer/html@1.0.1/dist/index.es.js" > "js/@lezer/html.js"
curl "https://unpkg.com/@lezer/lr@1.2.3/dist/index.js" > "js/@lezer/lr.js"
curl "https://unpkg.com/@lezer/css@1.0.1/dist/index.es.js" > "js/@lezer/css.js"
curl "https://unpkg.com/@lezer/javascript@1.0.2/dist/index.es.js" > "js/@lezer/javascript.js"
curl "https://unpkg.com/crelt@1.0.5/index.es.js" > "js/crelt.js"
curl "https://unpkg.com/style-mod@4.0.0/src/style-mod.js" > "js/style-mod.js"
curl "https://unpkg.com/w3c-keyname@2.2.6/index.es.js" > "js/w3c-keyname.js"
